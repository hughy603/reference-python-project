# AWS Glue Specific Environment Variables
# AWS Credentials (if using temporary credentials)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# AWS Glue Job Parameters
GLUE_JOB_NAME=
GLUE_JOB_LANGUAGE=python
GLUE_PYTHON_VERSION=3.9
GLUE_VERSION=4.0

# S3 Bucket Information
S3_BUCKET=
S3_PREFIX=glue-scripts/
S3_TEMP_DIR=s3://my-temp-bucket/temp/

# Data Catalog Information
DATABASE_NAME=my_glue_database
TABLE_NAME=my_table

# Job Runtime Configuration
NUMBER_OF_WORKERS=2
WORKER_TYPE=G.1X
MAX_CONCURRENT_RUNS=1
TIMEOUT_MINUTES=30

# Additional Job Parameters
ENABLE_METRICS=True
ENABLE_CONTINUOUS_CLOUDWATCH_LOG=True
ENABLE_SPARK_UI=True
JOB_BOOKMARK_OPTION=job-bookmark-enable

# Custom Parameters
SOURCE_TYPE=csv
TARGET_TYPE=parquet
PARTITION_COLUMNS=year,month,day
